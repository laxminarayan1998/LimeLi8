<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/tick_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/tick_inside_circle"
            android:tint="#FFFFFF"/>

        <TextView
            android:id="@+id/success_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUCCESS"
            android:fontFamily="@font/apple_gothic"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginTop="15dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your order has been confirmed."
            android:fontFamily="@font/helvetica"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDER ID : LIMELI8524e4"
        android:layout_below="@id/tick_layout"
        android:fontFamily="@font/helvetica"
        android:textStyle="bold"
        android:paddingVertical="20dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/deliver_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your order will be delivered shortly.\nThank you for using LimeLi8."
        android:layout_below="@id/order_id"
        android:fontFamily="@font/helvetica"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"/>


    <LinearLayout
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deliver_message"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/dismiss_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/buttom_background"
            android:layout_below="@id/text_message"
            android:layout_marginVertical="30dp"
            android:text="Ok"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>



</RelativeLayout>